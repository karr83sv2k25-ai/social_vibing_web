# Hostinger Upload Directory Configuration
# Increase PHP limits for file uploads

# Enable PHP error logging (disable in production)
# php_flag display_errors off
# php_flag log_errors on

# Increase upload limits
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M
php_value max_input_time 300

# Security: Prevent directory listing
Options -Indexes

# Security: Deny access to .htaccess and other hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# CORS headers for API access
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, X-API-Key"
</IfModule>

# Handle OPTIONS preflight requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Prevent execution of PHP files in uploads directory
<Directory "uploads">
    php_flag engine off
    RemoveHandler .php .phtml .php3
    RemoveType .php .phtml .php3
</Directory>
